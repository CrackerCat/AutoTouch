<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/alphaBackgroundHint">

    <FrameLayout
        android:id="@+id/mark_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/move_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/icon_drag_left_top" />

        <ImageView
            android:id="@+id/move_right"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:srcCompat="@drawable/icon_drag_right_bottom" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/button_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/back_button"
            style="@style/Theme.AutoTouch.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_back" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_button"
            style="@style/Theme.AutoTouch.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_save" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/close_button"
            style="@style/Theme.AutoTouch.Button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/icon_close" />
    </LinearLayout>


</FrameLayout>