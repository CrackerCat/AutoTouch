<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:background="@drawable/corner">

    <com.king.view.circleprogressview.CircleProgressView
        android:id="@+id/play_button"
        android:layout_width="40dp"
        android:layout_height="40dp"

        app:cpvCirclePadding="0dp"
        app:cpvLabelTextColor="?attr/colorPrimary"
        app:cpvLabelTextSize="14sp"
        app:cpvNormalColor="?attr/backgroundColor"
        app:cpvProgress="0"
        app:cpvProgressColor="?attr/colorPrimary"
        app:cpvShowTick="false"
        app:cpvStrokeWidth="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
