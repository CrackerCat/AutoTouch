<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="?attr/materialCardViewFilledStyle"
    app:cardBackgroundColor="?attr/colorSurface"
    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.Material3.Button">

    <com.king.view.circleprogressview.CircleProgressView
        android:id="@+id/play_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:cpvCirclePadding="0dp"
        app:cpvLabelTextColor="?attr/colorPrimary"
        app:cpvLabelTextSize="11sp"
        app:cpvNormalColor="?attr/colorSurface"
        app:cpvProgress="0"
        app:cpvProgressColor="?attr/colorPrimary"
        app:cpvShowTick="false"
        app:cpvStrokeWidth="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</com.google.android.material.card.MaterialCardView>