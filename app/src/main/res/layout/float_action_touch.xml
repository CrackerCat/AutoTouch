<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <top.bogey.touch_tool.ui.custom.TouchPathView
        android:id="@+id/touch_path"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/play_button"
        style="@style/Theme.TouchTool.Button.OutlinedButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/icon_play" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/picker_button"
        style="@style/Theme.TouchTool.Button.OutlinedButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/icon_action_touch" />

</LinearLayout>