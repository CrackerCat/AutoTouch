<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false">

    <include
        android:id="@+id/text_base_include"
        layout="@layout/float_action_text_base"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/picker_button"
        style="@style/Theme.TouchTool.Button.OutlinedButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/icon_action_input" />

    <include
        android:id="@+id/text_input_include"
        layout="@layout/float_action_text_base"
        android:layout_width="80dp"
        android:layout_height="wrap_content" />

</LinearLayout>