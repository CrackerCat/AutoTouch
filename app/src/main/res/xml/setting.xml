<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="@string/action_config">

        <SwitchPreferenceCompat
            android:key="action_touch_offset"
            android:title="@string/action_touch_offset"
            android:summary="@string/action_touch_offset_tips"
            android:icon="@drawable/icon_touch_offset"
            android:widgetLayout="@layout/widget_switch"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/theme" >

        <DropDownPreference
            android:key="night_mode"
            android:title="@string/night_mode"
            android:entries="@array/night_mode"
            android:icon="@drawable/icon_dark_mode"
            android:entryValues="@array/night_mode_value"/>

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/app_info">

        <Preference
            android:key="version"
            android:title="@string/version"/>

        <Preference
            android:key="source_code"
            app:title="@string/source_code"/>

    </PreferenceCategory>

</PreferenceScreen>