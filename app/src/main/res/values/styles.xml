<resources>
    <style name="Theme.AutoTouch.Button.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="android:textScaleX">0</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeWidth">0.75dp</item>
    </style>

    <style name="Theme.AutoTouch.Button.IconOnly" parent="Widget.Material3.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="android:textScaleX">0</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.AutoTouch.Button" parent="Widget.Material3.Button">
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textTop</item>
        <item name="android:textScaleX">0</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Theme.AutoTouch.Badge" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Theme.AutoTouch.ShapeAppearance.CornerLeft.Full" parent="">
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeTopRight">0%</item>
        <item name="cornerSizeBottomRight">0%</item>
    </style>

    <style name="Theme.AutoTouch.ShapeAppearance.CornerRight.Full" parent="">
        <item name="cornerSizeTopLeft">0%</item>
        <item name="cornerSizeBottomLeft">0%</item>
        <item name="cornerSizeTopRight">50%</item>
        <item name="cornerSizeBottomRight">50%</item>
    </style>

    <style name="Theme.AutoTouch.ShapeAppearance.Corner.Large" parent="">
        <item name="cornerSizeTopLeft">?attr/largeCornerRadius</item>
        <item name="cornerSizeBottomLeft">?attr/largeCornerRadius</item>
        <item name="cornerSizeTopRight">?attr/largeCornerRadius</item>
        <item name="cornerSizeBottomRight">?attr/largeCornerRadius</item>
    </style>

</resources>